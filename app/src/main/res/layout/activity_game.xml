<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_green_dark2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Dealer label -->
    <TextView
        android:id="@+id/tvDealerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dealer"
        android:textColor="@color/text_main"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138" />


    <!-- Dealer cards -->
    <TextView
        android:id="@+id/tvDealerCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10â™£  [hidden]"
        android:textColor="@color/text_main"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvDealerLabel"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dealer score -->
    <TextView
        android:id="@+id/tvDealerScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="10"
        android:textColor="@color/text_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvDealerCards" />


</androidx.constraintlayout.widget.ConstraintLayout>