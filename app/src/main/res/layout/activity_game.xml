<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_green_dark2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Dealer label -->
    <TextView
        android:id="@+id/tvDealerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dealer"
        android:textColor="@color/text_main"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138" />


    <!-- Dealer cards -->

    <!-- Dealer score -->
    <TextView
        android:id="@+id/tvDealerCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="10♣  [hidden]"
        android:textColor="@color/text_main"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvDealerLabel" />

    <TextView
        android:id="@+id/tvDealerScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:text="10"
        android:textSize="20sp"
        android:textColor="@color/text_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvDealerCards" />

    <!-- Player label -->


    <!-- Player cards -->
    <TextView
        android:id="@+id/tvPlayerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:text="Player's Hand"
        android:textColor="@color/text_main"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvDealerScore" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="8♦  7♥"
        android:textColor="@color/text_main"
        android:textSize="25sp"
        android:id="@+id/tvPlayerCards"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvPlayerLabel" />

    <!-- Player score -->
    <TextView
        android:id="@+id/tvPlayerScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        android:textSize="20sp"
        android:textColor="@color/text_main"
        app:layout_constraintTop_toBottomOf="@id/tvPlayerCards"
        app:layout_constraintTop_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Hit button -->
    <Button
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:id="@+id/btnHit"
        android:textAllCaps="false"
        android:text="Hit"
        android:textColor="@color/text_main"
        android:backgroundTint="@color/btn_green"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toBottomOf="@id/tvPlayerScore"
        app:layout_constraintTop_margin="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Stand button -->
    <Button
        android:id="@+id/btnStand"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Stand"
        android:textAllCaps="false"
        android:textColor="@color/text_main"
        android:backgroundTint="@color/btn_green"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toBottomOf="@id/btnHit"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Double Down button -->
    <Button
        android:id="@+id/btnDoubleDown"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Double Down"
        android:textAllCaps="false"
        android:textColor="@color/text_main"
        android:backgroundTint="@color/btn_green"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toBottomOf="@id/btnStand"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- New Round button -->
    <Button
        android:id="@+id/btnNewRound"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="New Round"
        android:textAllCaps="false"
        android:backgroundTint="@color/btn_green"
        android:textColor="@color/text_main"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintTop_toBottomOf="@id/btnDoubleDown"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Chips display -->
    <TextView
        android:id="@+id/tvChips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chips: 1000"
        android:textSize="15sp"
        android:textColor="@color/text_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_margin="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>










</androidx.constraintlayout.widget.ConstraintLayout>